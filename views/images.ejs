  <body>
    <section class="section">
      <div class="maincolumns columns is-desktop is-vcentered">
        <div
          class="columns is-10 is-offset-1 notification is-info is-light box container"
        >
          <div class="column">
          
            <div class="title">
						User
					</div>
					<% if (locals.allPics) { %>
						<div class="table-container">
						<table class="table is-bordered is-hoverable is-striped is-narrow">
							<thead>
							<tr>
								<th> User Name </th>
								<th> &nbsp; </th>
								<th> &nbsp; </th>
							</tr>
							</thead>
							<% let i=0; %>
							<% for(i=0; i < allPics.length; i++) { %>
							<tr>
								<td><%= allPics[i].name %></td>
								<% if (allPics[i].image_id) { %>
									<td>
										<script type="text/javascript">document.write($.cloudinary.imageTag('<%- allPics[i].image_id %>', {height: 100, width: 100, crop: "fit"}).toHtml());</script>
									<% } else { %>
									<td colspan="2">
										<form action="setUserPic" method="post" enctype="multipart/form-data">
											<div class="field is-horizontal">
												<input type="hidden" name="pic_id" value="<%= allPics[i].pic_id %>"/>
												<input type="hidden" name="user_id" value="<%= allPics[i].user_id %>"/>
												<div id="picture-upload" class="file is-info has-name is-small is-right">
												  <label class="file-label">
													<input class="file-input" type="file" name="image"/>
													<span class="file-cta">
														<span class="file-icon"><i class="fas fa-upload"></i></span>
														<span class="file-label">Choose a fileâ€¦</span>
													</span>
													<span class="file-name">No File</span>
												  </label>
												</div>
												&nbsp;
												<div class="field">
													<button class="button is-link is-small">
														<span>Upload</span>
														<span class="icon is-small">
															<i class="fas fa-image"></i>
														</span>
													</button>
												</div>
											</div>
										</form>
									<% } %>
								</td>
								<% if (allPics[i].image_id) { %>
								<td><a href="/deletePetImage?id=<%= allPics[i].pic_id %>&user=<%= allPics[i].user_id %>&pic=<%=true%>">
									<span class="icon is-small">
										<i class="fas fa-eraser"></i>
									</span></a>
								</td>
								<% } %>
							</tr>
							<% } %>
							<tfoot>
								<tr> <td colspan="3">
								There are <%= i %> pictures.
								</td> </tr>
							</tfoot>
						</table>
						</div>
					<% } %>

