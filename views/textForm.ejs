<!DOCTYPE html>
<%- include("templates/header") %>
<html>
<body>
    <section class="section">
        <div class="maincolumns columns is-desktop is-vcentered">
            <div class="column is-10 is-offset-1 notification is-info is-light box container">

                <form action="/submitText" method="post">
                    <div class="columns"> 
                        <div class="column is-7"> 
                            <h1 class="title is-1">Text</h1>
                            <h3 class="title is-6">New Text/Paste</h3>
                            <input class="input is-small" style="width:fit-content;" name="text_title" type="text" placeholder="Text name">
                            <textarea class="textarea" name="text_content" placeholder="Paste something!" rows="10" cols="0"></textarea>
                            <br>
                            <button class="button is-success">
                              <span>Create a new text</span>
                                  <span class="icon is-small">
                                    <i class="far fa-sticky-note"></i>
                                  </span>
                            </button>
                        </div>

                        <div class="column is-4"> 

                            <h3 class="title is-6">My Text/Pastes</h3>
                            <section>
                                <% if (locals.listOfText) { %>
                                <table>
                                    <% let i=0 %>
                                    <tr>
                                        <th style="padding-right: 50px;">Text/Paste Title</th>
                                        <th>Shareable URL</th>
                                    </tr>
                                    <% for(i; i < listOfText.length; i++){ %>
                                    <tr>
                                        <td style="padding-bottom: 5px;">
                                            <a href="/<%=listOfText[i].text_UUID %>"><%= listOfText[i].text_title %></a>
                                        </td>
                                        <td style="padding-bottom: 5px;">
                                            <a href="/<%=listOfText[i].text_UUID %>">http://localhost:3000/<%= listOfText[i].text_UUID %></a>
                                        </td>
                                    </tr>
                                    <% } %>
                                </table>
                                <% } %>
                            </section>
                        </div>
                    </div> 
                </form>
            </div>
        </div>
    </section>
</body>

</html>
